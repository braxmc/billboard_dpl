<h1> Add new Billboard hit </h1>

<%= form_for @billboard do |f| %>

  <%= f.label :rating %>
  <%= f.text_field :rating, required: true, placeholder: "Artist rating" %>

  <%= f.label :description %>
  <%= f.text_area :description, required: true, placeholder: "Band: Description"%>

  <%= f.submit %>

<% end %>
